<div class="tab-content">
     <div class="container p-11">
          <div class="row">
               <div class="col-md-12 mx-auto">
                    <div class="card card-body">
                         <div class="well profile centrado">
                              <div class="row">
                                   <div class="col-sm-10">
                                        <div class="col-xs-12 col-sm-8 ">
                                             <h2>{{a.alumnoApellidoPaterno}} {{a.alumnoApellidoMaterno}},
                                                  {{a.alumnoNombre}}
                                             </h2>
                                             <p><strong>Codigo: </strong> {{a.idAlumno}}</p>
                                             <h6><strong>Situacion: </strong>
                                                  <span class="badge badge-primary">{{a.sumSituacionAcademica}}</span>
                                             </h6>

                                             <br>
                                        </div>
                                   </div>
                                   <div class="col-sm-2">
                                        <br>
                                        <a type="button" style="float:right;margin-top: 20px;" href="/alumno/PerfilAlumno/{{a.idAlumno}}" class="btn btn-warning"> Ver perfil del alumno</a>
                                        <br>
                                   </div>
                              </div>
                              <div class="col-xs-12 divider">
                                   <div class=" col-sm-12">
                                        <div class="container">
                                             <br>
                                             <h3>Crear cita</h3>
                                             <br>
                                             <form action="/citas/crearCita/{{a.idAlumno}}" method="POST" >
                                                  <div class="col-xs-12 col-sm-8 form-group">
                                                       <p><strong>Fecha de la cita </strong> 
                                                            <input class="form-control" type="datetime-local" value="2019-01-01T00:00:00" name="fecha" required>
                                                       </p>
                                                       <p><strong>Motivo de la cita </strong> 
                                                            <input class="form-control" type="text" name="motivo" required>
                                                       </p>

                                                  </div>

                                                  <button type="submit" class="btn btn-primary" style="float:right;margin-top: 20px;">Crear cita</button>
                                             </form>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>