<div class="tab-content">
     <div class="container p-11">
          <div class="row">
               <div class="col-md-12 mx-auto">
                    <div class="card card-body">
                         <div class="well profile centrado">
                              <div class="row">
                                   <div class="col-sm-10">
                                        <div class="col-xs-12 col-sm-8 ">
                                             <h2>{{c.ApePaterno}} {{c.ApeMaterno}},
                                                  {{c.Nombre}}
                                             </h2>
                                             <p><strong>Codigo: </strong> {{c.idAlumno}}</p>
                                             <h6><strong>Situacion: </strong>
                                                  <span class="badge badge-primary">{{c.SitAcademica}}</span>
                                             </h6>

                                             <br>
                                        </div>
                                   </div>
                                   <div class="col-sm-2">
                                        <br>
                                        <a type="button" style="float:right;margin-top: 20px;" href="/alumno/PerfilAlumno/{{c.idAlumno}}" class="btn btn-warning"> Ver perfil del alumno</a>
                                        <br>
                                   </div>
                              </div>
                              <div class="col-xs-12 divider">
                                   <div class=" col-sm-12">
                                        <div class="container">
                                             <br>
                                             <h3>Editar cita</h3>
                                             <br>
                                             <form action="/citas/editarCita/{{c.idCita}}" method="POST" onsubmit="return confirmacion('Â¿Seguro que desea editar la cita?')">
                                                  <div class="col-xs-12 col-sm-8 form-group">
                                                       <p><strong>Fecha de la cita </strong> 
                                                            <input class="form-control" type="datetime-local" value="{{c.citaFecha}}" name="fecha" required>
                                                       </p>
                                                       <p><strong>Motivo de la cita </strong> 
                                                            <input class="form-control" type="text" name="motivo" value="{{c.citaMotivo}}" required>
                                                       </p>
                                                       <input type="text" style="display: none;" value="{{c.idAlumno}}" name="idAlumno">

                                                  </div>

                                                  <button type="submit" class="btn btn-primary" style="float:right;margin-top: 20px;">Editar cita</button>
                                             </form>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>