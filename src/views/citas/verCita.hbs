<div class="tab-content">
     <div class="container p-11">
          <div class="row">
               <div class="col-md-12 mx-auto">
                    <div class="card card-body">
                         <div class="well profile centrado">
                              <div class="row">
                                   <div class="col-sm-10">
                                        <div class="col-xs-12 col-sm-8 ">
                                             <h2>{{c.ApePaterno}} {{c.ApeMaterno}},
                                                  {{c.Nombre}}
                                             </h2>
                                             <p><strong>Codigo: </strong> {{c.idAlumno}}</p>
                                             <h6><strong>Situacion: </strong>
                                                  <span class="badge badge-primary">{{c.SitAcademica}}</span>
                                             </h6>

                                             <br>
                                        </div>
                                   </div>
                                   <div class="col-sm-2">
                                        <a type="button" style="float:right;margin-top: 20px;" href="/alumno/PerfilAlumno/{{c.idAlumno}}" class="btn btn-warning"> Ver perfil del alumno</a>
                                        <br>
                                        <br>
                                        <a type="button" style="float:right;margin-top: 20px;" href="/citas/listaCitas" class="btn btn-dark"> Ver lista de citas</a>
                                   </div>
                              </div>
                              <div class="col-xs-12 divider">
                                   <br>
                                   <div class="col-xs-12 col-sm-12">
                                             <form action="/citas/editarObservaciones/{{c.idCita}}" method="POST" onsubmit="return confirmacion('¿Salir y guardar las observaciones?')">
                                                  <p><strong>Día de la cita: </strong> {{c.citaFecha}}</p>
                                                  <p><strong>Hora: </strong> {{c.citaHora}}</p>
                                                  <p><strong>Motivo: </strong> {{c.citaMotivo}}</p>
                                                  <div class="form-group">
                                                       <label for="observacion"><strong>Observaciones: </strong></label>
                                                       <textarea class="form-control" rows="15" name="observacion">{{c.observacion}}</textarea>
                                                  </div>
                                                  <button type="submit" class="btn btn-primary" style="float:right;margin-top: 20px;">Guarda observaciones</button>
                                             </form>

                                             <br>
                                             <br>
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>